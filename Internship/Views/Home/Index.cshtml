@using Internship.Models
@model IEnumerable<FullOrder>

<!DOCTYPE html>

<div style="margin-top: 10%;">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="postedFile" />
        <br />
        <input class="btn btn-primary" type="submit" value="Import" />
    }
    
    @if (Model.Count() > 0)
    {
        <hr />
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>ID</th>
                <th class="col-2nd">First Name</th>
                <th class="col-2nd">Last Name</th>
                <th class="col-2nd">Ticket Number</th>
                <th class="col-2nd">Event Date</th>
            </tr>
            @foreach (FullOrder fullOrder in Model)
            {
                <tr>
                    <td>@fullOrder.ID</td>
                    <td class="col-2nd">@fullOrder.FName</td>
                    <td class="col-2nd">@fullOrder.LName</td>
                    <td class="col-2nd">@fullOrder.TicketNumber</td>
                    <td class="col-2nd">@fullOrder.EventDate</td>
                </tr>
            }
        </table>
    }
</div>
<br />
<a href=@Url.Action("DisplayAll", "Home") class="btn btn-primary">Display All Orders</a>