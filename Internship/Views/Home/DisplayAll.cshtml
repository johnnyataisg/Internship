@using Internship.Models
@model IEnumerable<FullOrder>

@{
    ViewBag.Title = "DisplayAll";
}

<h2>All Orders and Tickets</h2>
<div>
    <hr />
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>ID</th>
            <th class="col-2nd">First Name</th>
            <th class="col-2nd">Last Name</th>
            <th class="col-2nd">Ticket Number</th>
            <th class="col-2nd">Event Date</th>
        </tr>
        @foreach (FullOrder fullOrder in Model)
        {
            <tr>
                <td>@fullOrder.ID</td>
                <td class="col-2nd">@fullOrder.FName</td>
                <td class="col-2nd">@fullOrder.LName</td>
                <td class="col-2nd">@fullOrder.TicketNumber</td>
                <td class="col-2nd">@fullOrder.EventDate</td>
            </tr>
        }
    </table>
</div>
<br />
<a href=@Url.Action("DeleteAll", "Home") class="btn btn-primary">Delete all orders</a>
